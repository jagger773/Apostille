.container.body.footer-fixed
  .main_container
    .col-md-3.left_col
      .left_col.scroll-view
        .navbar.nav_title(style="border:0")
          //a.site_title
            //span kamkor IPS
          .clearfix
          // menu profile quick info
          .profile
            //.profile_pic
              //img.img-thumbnail(src='favicon.ico' style="border: none; background-color: transparent; visibility:hidden;")
              ////img.img-circle.profile_img(src="assets/images/img.jpg")
              h3
            .profile_info
              span Добро пожаловать!
              h2 {{app.ua.username}}
          br
          .clearfix
          //sidebar menu
          .main_menu_side.hidden-print.main_menu#sidebar-menu(side-nav)
            .menu_section
              //h3 General
              h3
              ul.nav.side-menu
                //li <a ui-sref="app.docs.list"><i class="fa fa-book"></i> <span>Мои документы</span> </a>
                //li <a ui-sref="app.approval"><i class="fa fa-inbox"></i> <span>Документы</span> </a>
                li(ng-repeat='menu in app.navigation | orderBy : "data.position"')
                  a.dynamic_menu
                    i(ng-class='menu.data.icon')
                    span {{menu.name}} <span class="fa fa-chevron-down"></span>
                  ul.nav.child_menu(style="display:block;")
                    li(ng-repeat='child in menu.children | orderBy : "data.position"')
                      a.dynamic_menu(ui-sref='{{child.data.route}}') {{child.name}}
                li(ng-repeat='menu in app.admin_menu | orderBy : "data.position"')
                  a.admin_menu
                    i(ng-class='menu.data.icon')
                    span {{menu.name}} <span class="fa fa-chevron-down"></span>
                  ul.nav.child_menu
                    //li
                    //  a(ui-sref='app.company')
                    //    i.fa.fa-home
                    //    span Компании
                    li(ng-repeat='child in menu.children | orderBy : "data.position"')
                      a.admin_menu(ui-sref='{{child.data.route}}') {{child.name}}
          //menu footer
          .sidebar-footer.hidden-small
            a(data-toggle="tooltip",data-placement="top",title="Settings")
              span.glyphicon.glyphicon-cog(aria-hidden="true")
            a(data-toggle="tooltip",data-placement="top",title="FullScreen")
              span.glyphicon.glyphicon-fullscreen(aria-hidden="true")
            a(data-toggle="tooltip",data-placement="top",title="Lock")
              span.glyphicon.glyphicon-eye-close(aria-hidden="true")
            a(data-toggle="tooltip",data-placement="top",title="Logout", ng-click='app.logOut()')
              span.glyphicon.glyphicon-off(aria-hidden="true")
    //top navigation
    .top_nav
      .nav_menu
        nav(role="navigation")
          .nav.toggle
            a#menu_toggle <i class="fa fa-bars"></i>
          .nav.navbar-nav.navbar-left
            .navbar-header(ng-if='app.uc', ng-click='app.closeCompany()')
              a.navbar-brand {{app.uc.company.name}}
                span.glyphicon.glyphicon-remove
          ul.nav.navbar-nav.navbar-right
            li
              a.user-profile.dropdown-toggle(data-toggle="dropdown",aria-expanded="false")
                //img(src="assets/images/img.jpg")
                | Пользователь: {{app.ua.username}}
                span.fa.fa-angle-down
              ul.dropdown-menu.dropdown-usermenu.pull-right.dropdown#dropdown
                li
                  a(ui-sref="app.profile.view") Профиль
                li
                  a(ng-click='app.logOut()') <i class="fa fa-sign-out pull-right"></i> Выйти
    //page content
    .right_col.has-header(role="main")
      ui-view
      .row(style='height:100px')
    footer
      .pull-right Министерство юстиции Кыргызской Республики.Все права защищены 2017
      .clearfix
