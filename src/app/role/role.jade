.container
  panel(title='Роли')
    button.btn.btn-primary.btn-sm(ng-click='role.newRole()') Добавить
    button.btn.btn-default.btn-sm(ng-disabled='!role.selected_role' ng-click='role.editRole()')
      span.glyphicon.glyphicon-pencil.margin-right-8
      span Изменить
    button.btn.btn-default.btn-sm(ng-click='role.getRoles()')
      span.glyphicon.glyphicon-refresh
    paged-table(options='role.rolesGridOptions', disable-search='true', disable-paging='true')
